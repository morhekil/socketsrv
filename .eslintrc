{
    "rules": {
        "indent": [2, 2, {"VariableDeclarator": 2}],
        "quotes": [1, "single"],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"]
    },
    "env": {
        "es6": true,
        "node": true
    },
    "settings" : {
        "import/resolve": {
             "extensions": [".js"],
             "moduleDirectory": ["node_modules", "components", "stylesheets"]
        }
    }
}